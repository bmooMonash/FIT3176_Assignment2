{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data":{
        "url": "https://raw.githubusercontent.com/bmooMonash/FIT3176_Assignment2/main/shark%20attacks.csv"},
  
    "hconcat":[
            {
        "transform": [
          {"filter": {"field": "Fatal (Y/N)", "equal":"N"}},
          {"aggregate": [{"op":"count", "field": "Country", "as": "Non Fatal"}], "groupby": ["Country"]},
          {"window": [{"op":"row_number", "field": "", "as": "thign_rank"}]
          },
          {"filter": {"field": "Country", "oneOf": ["USA", "AUSTRALIA", "SOUTH AFRICA", "BAHAMAS", "NEW ZEALAND", "BRAZIL", "REUNION", "MEXICO", "NEW CALEDONIA", "EGYPT"]}}
         ],
         
        "width": 200,
        "title":"Non Fatal",
        "mark":{"type":"bar"},
        "encoding": {
        "y":{"field":"Country", "axis":null},
        "x":{"field":"Non Fatal", "type": "quantitative", "title": null, "sort":"descending"},
        "tooltip": [{"field": "Non Fatal"}]
        }
        
    },
    {
      "transform": [
          {"filter": {"field": "Fatal (Y/N)", "equal":"N"}},
          {"aggregate": [{"op":"count", "field": "Country", "as": "thing"}], "groupby": ["Country"]},
          {"window": [{"op":"row_number", "field": "", "as": "thign_rank"}]
          },
          {"filter": {"field": "Country", "oneOf": ["USA", "AUSTRALIA", "SOUTH AFRICA", "BAHAMAS", "NEW ZEALAND", "BRAZIL", "REUNION", "MEXICO", "NEW CALEDONIA", "EGYPT"]}}
         ],
      "width": 20,
      "view": {"stroke": null},
      "mark":{
        "type": "text",
        "align":"center"
      },
      "encoding": {
        "y":{"field": "Country", "axis":null},
        "text":{"field": "Country", "type": "nominal"}
      }
    },
              {
        "transform": [
          {"filter": {"field": "Fatal (Y/N)", "equal":"Y"}},
          {"aggregate": [{"op":"count", "field": "Country", "as": "Fatal"}], "groupby": ["Country"]},
          {"window": [{"op":"row_number", "field": "", "as": "thign_rank"}]
          },
          {"filter": {"field": "Country", "oneOf": ["USA", "AUSTRALIA", "SOUTH AFRICA", "BAHAMAS", "NEW ZEALAND", "BRAZIL", "REUNION", "MEXICO", "NEW CALEDONIA", "EGYPT"]}}
         ],
         
        "width": 200,
        "title":"Non Fatal",
        "mark":{"type":"bar"},
        "encoding": {
        "y":{"field":"Country", "axis":null},
        "x":{"field":"Fatal", "type": "quantitative", "title": null, "scale":{"domain":[0, 100]}
            },
        "tooltip": [{"field": "Fatal"}],
        "color":{"value":"#e35756"}
        }
    }
    ]
  }